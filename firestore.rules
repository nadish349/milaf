rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow authenticated users to create new users and access existing ones
    match /users/{userId} {
      // Allow read access to all authenticated users
      allow read: if request.auth != null;
      
      // Allow users to create their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to update their own document
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to delete their own document
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Inquiry collection - allow public access for business inquiries
    match /inquiry/{month}/inquiries/{inquiryId} {
      // Allow anyone to create new inquiries (public form submission)
      allow create: if true;
      
      // Allow authenticated users to read and update inquiries (admin access)
      allow read, update: if request.auth != null;
    }
    
    // Allow reading inquiry months for admin dashboard
    match /inquiry/{month} {
      allow read: if request.auth != null;
    }
    
    // Block access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

