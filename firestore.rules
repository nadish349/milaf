rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all access to inquiry collection for admin panel
    match /inquiry/{document=**} {
      allow read, write: if true;
    }
    
    // Users collection - allow authenticated users to create new users and access existing ones
    match /users/{userId} {
      // Allow read access to all authenticated users
      allow read: if request.auth != null;
      
      // Allow users to create their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to update their own document
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to delete their own document
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Products collection - allow admin access for product management
    match /products/{productId} {
      allow read, write: if true;
    }
    
    // Block access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

